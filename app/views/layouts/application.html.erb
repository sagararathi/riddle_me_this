<!DOCTYPE html>
<html>
  <head>
    <title>RiddleMeThis</title>
    <%= stylesheet_link_tag 'application','http://fonts.googleapis.com/css?family=Megrim' %>
    <%= stylesheet_link_tag 'application', 'http://fonts.googleapis.com/css?family=Quicksand:300,400,700' %>
    <%= stylesheet_link_tag 'application', 'http://fonts.googleapis.com/css?family=Sacramento:300,400,700' %>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application'%>

    <%= csrf_meta_tags %>
  </head>
  <body>
    <div id="wrapper">
      <header>
        <div class="nav-link nav-side left-nav-link"><%= link_to "RiddleMeThis", root_path %></div>
        <div class="nav-side right-nav-link">
          <% if current_user %>
          <div class="nav-link nav-link-1"><%= link_to "Submit Riddle", new_riddle_path %></div>
          <div class="nav-link nav-link-2"><%= link_to "Logout", logout_path %></div>
          <% else %>
          <div class="nav-link nav-link-1"><%= link_to "Signup", signup_new_path %></div>
          <div class="nav-link nav-link-2"><%= link_to "Login", login_form_path %></div>
          <% end %>
        </div>
      </header>

      <div class="container"></div>
      <div id="body">
      <%= yield %>
      </div>
      <div class="footer">
        <span class="footer-text">Made with</span>
        <%= image_tag 'heart.png', class: 'heart-img' %>
        <span class="footer-text">by</span>
        <a class="footer-text" href="https://github.com/sagararathi" target="_blank">sagararathi &</a>
        <a class="footer-text" href="https://github.com/kjb085" target="_blank">kjb085 &</a>
        <a class="footer-text" href="https://github.com/ivanyukio" target="_blank">ivanyukio &</a>
        <a class="footer-text" href="https://github.com/jjparseghian" target="_blank">jjparseghian &</a>
        <a class="footer-text" href="https://github.com/rosapergams" target="_blank">rosapergams</a>
      </div>
    </div>
  </body>
</html>
