 <%= form_for @riddle do |f| %>
  <%= f.text_field :title, class: "form-field", placeholder: "title"  %>

  <%= f.text_area :body, class: "form-field tall-form-field", placeholder: "body"  %>

  <%= f.text_field :answer, class: "form-field", placeholder: "answer"  %>
  <%= f.hidden_field(:user_id, value: session[:user_id] ) %>
   <%= f.submit class: "btn" %>
<% end %>