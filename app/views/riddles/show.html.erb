<div class="container">
  <div class="riddle_title">
    <%= @riddle.title %>
  </div>

  <div id='riddle_body'>
    <%= @riddle.body %>
  </div>

  <% if @riddle.answer %>
    <%= button_to "Show Answer", @riddle.answer, form_class: 'show_ans', class: "ans_btn"  %>
  <% end %>

  <div id='riddle_ans' class='initiallyHidden'>
    <%= @riddle.answer %>
  </div>

  <div class="comment-btn">
    <%= @count %>
  </div>

  <div class="comment-btn">
    <%= form_for([@riddle, @riddle_vote]) do |f| %>
      <%= f.submit "| upvote", class: "comment-btn"%>
    <% end %>
  </div>

  <% if current_user %>
    <% if @riddle.user_id == current_user.id %>
      <%= button_to 'Edit', edit_riddle_path(@riddle), method: :get %>
      <%= form_for(@riddle, :method => :delete) do |f| %>
        <%= f.submit "Delete"%>
      <% end %>
    <% end %>
  <% end %>

  <%= render partial: 'comments/index', locals: {riddle: @riddle} %>
</div>